<Window x:Class="Gra2D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gra WPF" Height="600" Width="800"
        KeyDown="OknoGlowne_KeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="123*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Panel sterowania (DODANE: pasek energii) -->
        <StackPanel Orientation="Horizontal" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <Button Content="Wczytaj mapę" Click="WczytajMape_Click" Margin="0,0,10,0"/>
            <Label Name="EtykietaDrewna" Content="Drewno: 0" FontSize="16"/>

            <!-- DODANE: Ikona i pasek energii -->
            <Image Source="serce.png" Width="20" Height="20" Margin="10,0,5,0"/>
            <ProgressBar Name="PasekEnergii" Width="100" Height="20" Maximum="100" Value="100"/>
        </StackPanel>

        <!-- Kontener wyświetlający mapę -->
        <Grid Name="SiatkaMapy" Grid.Row="1" Background="LightGray" Grid.ColumnSpan="2"/>
    </Grid>
</Window>


